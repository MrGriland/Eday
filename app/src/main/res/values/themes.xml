<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eday" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/basil_green_100</item>
        <item name="colorPrimaryVariant">@color/basil_green_500</item>
        <item name="colorOnPrimary">@color/basil_green_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/basil_orange_50</item>
        <item name="colorSecondaryVariant">@color/basil_orange_800</item>
        <item name="colorOnSecondary">#FFD54F</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Eday2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/basil_green_800</item>
        <item name="colorPrimaryVariant">@color/basil_green_500</item>
        <item name="colorOnPrimary">@color/basil_green_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/basil_orange_50</item>
        <item name="colorSecondaryVariant">@color/basil_orange_800</item>
        <item name="colorOnSecondary">#FFD54F</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Eday.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Eday.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Eday.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>